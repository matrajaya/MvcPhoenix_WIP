<html>
<head>
    <title>@ViewBag.Title - Phoenix/CMC SiMPLE</title>
    <style media="all">
        /*Move styles to print.css when done tweaking*/
        body{
            font-family: Segoe, Arial, Helvetica, sans-serif;
            margin:0;
            padding:0;
        }

        label{
            font-weight:bold;
        }

        table {
            width:100%;
            border-collapse:collapse;
            text-align:left;
            page-break-inside:avoid
        }
        
        th, td {
            padding:5px;
            vertical-align:text-top;
        }

        h3 {
            padding: 5px,;
            margin: 0
        }

        p {
            padding: 2px;
            margin:2px
        }

        .form-group {
            page-break-inside:avoid
        }

        .form-control {
            border-width:0;
            border-color:transparent;
        }

        footer {page-break-after: always;}

        .noprint, #noprint, a, div.alert, header, .group-media, .btn, .footer, form, #comments, .nav, ul.links.list-inline, ul.action-links {
            display: none !important;
        }
    </style>
</head>

<body onload='$("#bcTarget").barcode("@Model.productdetailid ~ @Model.productcode ~ @Model.productname", "datamatrix", { moduleSize: 2, showHRI: false });'>
    @RenderBody()

    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>

</html>

