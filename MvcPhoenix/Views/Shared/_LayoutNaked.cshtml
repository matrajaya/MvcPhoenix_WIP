<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Phoenix/CMC SiMPLE</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    @Styles.Render("~/Content/css")
</head>
<body>
    <!--Begin: Top-banner and Navigation-->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
            @Html.ActionLink("Phoenix/SiMPLE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
    </div>
    <!--End: Top-banner and Navigation-->
    <!-- Begin: Generate View Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="container body-content">
                <div class="row">
                    <div class="col-lg-12" style="padding-top: 20px;">
                        @RenderBody()
                    </div>
                </div>
                <hr />
                <div class="row">
                    <footer class="col-lg-12">
                        <p><b>&copy; @DateTime.Now.Year - SiMPLE by CMC,</b> <em>a subsidiary of Odyssey.</em></p>
                    </footer>
                </div>
            </div>
        </div>
    </div>
    <!-- End: Generate View Content -->
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>