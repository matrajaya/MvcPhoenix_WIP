@model MvcPhoenix.Models.OrderMasterFull
@{
    ViewBag.Title = "Order Entry:";
    Layout = "~/Views/Shared/_LayoutPrint.cshtml";
}

<script type="text/javascript">
    window.onload = function () {
        $("#OrderBarcode").barcode(
            "@Model.orderid ~ @Model.clientid ~ @Model.clientname",
            "datamatrix",
            { moduleSize: 2, showHRI: false });
    };
</script>

<div id="OrderBarcode"></div>

<img src="~/Content/images/logos/@Model.logofilename" style="width: auto; height: 73px; float: right" alt="@Model.clientname logo">
<h1 class="page-header">
    @ViewBag.Title <small> @Model.orderid for @Model.clientname</small>
</h1>

<div class="form-group">
    <table>
        <tr>
            <td width="25%">
                <label>Created On:</label><br />
                @Html.DisplayFor(m => m.orderdate)
            </td>
            <td width="25%">
                <label>Created By:</label><br />
                @Html.DisplayFor(m => m.CreateUser)
            </td>
            <td width="25%">
                <label>Updated On:</label><br />
                @Html.DisplayFor(m => m.UpdateDate)
            </td>
            <td width="25%">
                <label>Updated By:</label><br />
                @Html.DisplayFor(m => m.UpdateUser)
            </td>
        </tr>
    </table>
</div>

<hr />

<div class="form-group">
    <h3>Client Order Information</h3>
    <table>
        <tr>
            <td width="25%"></td>
            <td width="25%"></td>
            <td width="25%"></td>
            <td width="25%"></td>
        </tr>
        <tr>
            <td colspan="3">
                <label class="control-label">Name</label><br />
                @Html.DisplayFor(m => m.clientname)
            </td>
            <td>
                <label>Billing Group</label><br />
                @Html.DisplayFor(m => m.billinggroup)
            </td>
        </tr>
        <tr>
            <td>
                <label>Client Reference</label><br />
                @Html.DisplayFor(m => m.custrefnum)
            </td>
            <td>
                <label>Client Order Number</label><br />
                @Html.DisplayFor(m => m.custordnum)
            </td>
            <td>
                <label>Order Type</label><br />
                @Html.DisplayFor(m => m.ordertype)
            </td>
            <td>
                <label>Order Source</label><br />
                @Html.DisplayFor(m => m.source)
            </td>
        </tr>
    </table>
</div>

<hr />

<div class="form-group">
    <h3>Ship To Details</h3>
    <table>
        <tr>
            <td width="25%"></td>
            <td width="25%"></td>
            <td width="25%"></td>
            <td width="25%"></td>
        </tr>
        <tr>
            <td colspan="2">
                <label>Name</label><br />
                @Html.DisplayFor(m => m.company)
            </td>
            <td colspan="2">
                <label>Attention</label><br />
                @Html.DisplayFor(m => m.attention)
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <label>Email</label><br />
                @Html.DisplayFor(m => m.email)
            </td>
            <td>
                <label>Phone</label><br />
                @Html.DisplayFor(m => m.phone)
            </td>
            <td>
                <label>Fax</label><br />
                @Html.DisplayFor(m => m.fax)
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <label class="control-label">Address 1</label><br />
                @Html.DisplayFor(m => m.street)
            </td>
            <td>
                <label class="control-label">Address 2</label><br />
                @Html.DisplayFor(m => m.street2)
            </td>
            <td>
                <label class="control-label">Address 3</label><br />
                @Html.DisplayFor(m => m.street3)
            </td>
        </tr>
        <tr>
            <td>
                <label>City</label><br />
                @Html.DisplayFor(m => m.city)
            </td>
            <td>
                <label>Zip</label><br />
                @Html.DisplayFor(m => m.Zip)
            </td>
            <td>
                <label>State</label><br />
                @Html.DisplayFor(m => m.state)
            </td>
            <td>
                <label>Country</label><br />
                @Html.DisplayFor(m => m.country)
            </td>
        </tr>
    </table>
</div>

<hr />

<div class="form-group">
    <h3>Requestor's Details</h3>
    <table>
        <tr>
            <td width="25%">
                <label>Requestor's Name</label><br />
                @Html.DisplayFor(m => m.req)
            </td>
            <td width="25%">
                <label>Requestor's Email</label><br />
                @Html.DisplayFor(m => m.reqemail)
            </td>
            <td width="25%">
                <label>Requestor's Phone</label><br />
                @Html.DisplayFor(m => m.reqphone)
            </td>
            <td width="25%">
                <label>Requestor's Fax</label><br />
                @Html.DisplayFor(m => m.reqfax)
            </td>
        </tr>
        <tr>
            <td>
                <label>Sales Rep's Name</label><br />
                @Html.DisplayFor(m => m.salesrep)
            </td>
            <td>
                <label>Sales Rep's Email</label><br />
                @Html.DisplayFor(m => m.sales_email)
            </td>
            <td>
                <label>Sales Rep's Phone</label><br />
                @Html.DisplayFor(m => m.salesrepphone)
            </td>
            <td>
                <label>Sales Rep's Territory</label><br />
                @Html.DisplayFor(m => m.salesrepterritory)
            </td>
        </tr>
        <tr>
            <td>
                <label>Marketing Rep's Name</label><br />
                @Html.DisplayFor(m => m.marketingrep)
            </td>
            <td>
                <label>Marketing Rep's Email</label><br />
                @Html.DisplayFor(m => m.marketingrepemail)
            </td>
            <td>
                <label>Distributor</label><br />
                @Html.DisplayFor(m => m.distributor)
            </td>
            <td>
                <label>End Use</label><br />
                @Html.DisplayFor(m => m.enduse)
            </td>
        </tr>
        <tr>
            <td>
                <label>Approval Needed</label><br />
                @Html.CheckBoxFor(m => m.approvalneeded, new { @class = "checkbox" })
            </td>
            <td>
                <label>Approval Date</label><br />
                @Html.TextBoxFor(m => m.approvaldate, "{0:dd-MMM-yyyy}", new { @class = "form-control" })
            </td>
        </tr>
    </table>
</div>

<hr />

<div class="form-group">
    <h3>Order Items</h3>
    <div id="dvItems">
        @if (Model.orderid > 1)
        {
            <div id="dvOrderItemsList">
                @Html.Action("fnOrderItemsList", "Orders", new { id = Model.orderid })
            </div>
        }
    </div>
</div>

<hr />

<div class="form-group">
    <h3>Transaction Charges &amp; Log Notes</h3>
    <div id="dvOrderTransList">
        @if (@Model.transcount > 0)
        {
            @Html.Action("fnOrderTransList", "Orders", new { id = Model.orderid })
        }
    </div>
</div>

<hr />

<div class="form-group">
    <h3>Shipments</h3>
    <table>
        <tr>
            <td width="33.33%">
                <label>Ship Via</label><br />
                @Html.DisplayFor(m => m.shipvia)
            </td>
            <td width="33.33%">
                <label>Shipping Account</label><br />
                @Html.DisplayFor(m => m.shipacct)
            </td>
            <td width="33.33%">
                <label>Preferred Carrier</label><br />
                @Html.DisplayFor(m => m.preferredcarrier)
            </td>
        </tr>
        <tr>
            <td>
                <label>Timing</label><br />
                @Html.DisplayFor(m => m.timing)
            </td>
            <td>
                <label>SPS Freight Cost</label><br />
                @Html.DisplayFor(m => m.spsfreightcost)
            </td>
            <td>
                <label>SPS Shipped Weight</label><br />
                @Html.DisplayFor(m => m.spsshippedwt)
            </td>
        </tr>
    </table>
</div>

<hr />

<div class="form-group">
    <h3>Special Instructions</h3>
    <table>
        <tr>
            <td width="50%">
                <label>Internal Notes</label><br />
                @Html.DisplayFor(m => m.specialinternal)
            </td>
            <td>
                <label>External Notes</label><br />
                @Html.DisplayFor(m => m.special)
            </td>
        </tr>
    </table>
</div>