                }))
                {
                    <div class="input-group" style="padding: 5px;">
                        @Html.TextBox("searchtrackingnumber", null, new { @class = "form-control", placeholder = "Tracking Number...", @required = "required", @pattern = "[A-Za-z0-9]{1,20}" })
