<div id="dialogPlaceholderModal" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Advanced Search</h4>
            </div>

            <div id="dialogPlaceholderBody" class="modal-body">

                @using (Ajax.BeginForm("LookupClientID", "Orders", FormMethod.Post, new AjaxOptions
                {
                    UpdateTargetId = "dvSearchResults",
                    InsertionMode = InsertionMode.Replace,
                    OnSuccess = "$('#dialogPlaceholderModal').modal('hide')",
                    OnFailure = "$.alert('Client search result not found')"
                }))
                {
                    <div class="input-group" style="padding: 5px;">
                        @Html.DropDownList("searchclient", ApplicationService.ddlClientIDs(), new { name = "searchclient", @class = "form-control", @required = "required" })
                        <span class="input-group-btn"><input type="submit" class="btn btn-primary" value="Search" /></span>
                    </div>
                }

                @using (Ajax.BeginForm("LookupOrderDate", "Orders", FormMethod.Post, new AjaxOptions
                {
                    UpdateTargetId = "dvSearchResults",
                    InsertionMode = InsertionMode.Replace,
                    OnSuccess = "$('#dialogPlaceholderModal').modal('hide')",
                    OnFailure = "$.alert('Order date search result not found')"
                }))
                {
                    <div class="input-group" style="padding: 5px;">
                        <input class="form-control date-picker" id="searchorderdate" name="searchorderdate" placeholder="DD-MMM-YYYY" required />
                        <span class="input-group-btn"><input type="submit" class="btn btn-primary" value="Search" /></span>
                    </div>
                }

                @using (Ajax.BeginForm("LookupCompany", "Orders", FormMethod.Post, new AjaxOptions
                {
                    UpdateTargetId = "dvSearchResults",
                    InsertionMode = InsertionMode.Replace,
                    OnSuccess = "$('#dialogPlaceholderModal').modal('hide')",
                    OnFailure = "$.alert('Company search result not found')"
                }))
                {
                    <div class="input-group" style="padding: 5px;">
                        @Html.TextBox("searchcompany", null, new { @class = "form-control", placeholder = "Ship To...", @required = "required", @pattern = "[A-Za-z0-9]{1,20}" })
                        <span class="input-group-btn"><input type="submit" class="btn btn-primary" value="Search" /></span>
                    </div>
                }

                @using (Ajax.BeginForm("LookupAttention", "Orders", FormMethod.Post, new AjaxOptions
                {
                    UpdateTargetId = "dvSearchResults",
                    InsertionMode = InsertionMode.Replace,
                    OnSuccess = "$('#dialogPlaceholderModal').modal('hide')",
                    OnFailure = "$.alert('Attention search result not found')"
                }))
                {
                    <div class="input-group" style="padding: 5px;">
                        @Html.TextBox("searchattention", null, new { @class = "form-control", placeholder = "Attention...", @required = "required" })
                        <span class="input-group-btn"><input type="submit" class="btn btn-primary" value="Search" /></span>
                    </div>
                }

                @using (Ajax.BeginForm("LookupZipCode", "Orders", FormMethod.Post, new AjaxOptions
                {
                    UpdateTargetId = "dvSearchResults",
