                    <div class="input-group" style="padding: 5px;">
                        @Html.TextBox("searchweborderid", null, new { @class = "form-control", placeholder = "Web Order Id...", @required = "required", @type = "number"  })
                        <span class="input-group-btn"><input type="submit" class="btn btn-primary" value="Search" /></span>
                    </div>
                }

                @using (Ajax.BeginForm("LookupClientReference", "Orders", FormMethod.Post, new AjaxOptions
                {
