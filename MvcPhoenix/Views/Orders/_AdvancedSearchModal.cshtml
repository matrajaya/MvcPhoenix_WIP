                    </div>
                }

                @using (Ajax.BeginForm("LookupTrackingNumber", "Orders", FormMethod.Post, new AjaxOptions
                {
                    UpdateTargetId = "dvSearchResults",
                    InsertionMode = InsertionMode.Replace,
                    OnSuccess = "$('#dialogPlaceholderModal').modal('hide')",
