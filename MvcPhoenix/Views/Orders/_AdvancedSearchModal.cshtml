                    <div class="input-group" style="padding: 5px;">
                        @Html.TextBox("searchinstructions", null, new { @class = "form-control", placeholder = "Special Instructions...", @required = "required", @maxlength = "30" })
                        <span class="input-group-btn"><input type="submit" class="btn btn-primary" value="Search" /></span>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $(".date-picker").datepicker({ dateFormat: 'dd-M-yy' });
    });
</script>