@{
    ViewBag.Title = "Orders";
    ViewBag.TodayLink = "NewToday";

    List<SelectListItem> MiscFields = new List<SelectListItem>();
    MiscFields.Add(new SelectListItem { Text = "ShipRef", Value = "ShipRef" });
    MiscFields.Add(new SelectListItem { Text = "Customer Order Number", Value = "CustOrderNum" });
    MiscFields.Add(new SelectListItem { Text = "Zip Code", Value = "ZipCode" });
    MiscFields.Add(new SelectListItem { Text = "Sales Rep (50)", Value = "SalesRep" });
}

<div class="container-fluid">
    <!-- Start: Title Head -->
    <div class="row">
        <div class="col-lg-12">
            <img src="~/Content/images/logos/oltlogo.jpg" style="width: auto; height: 73px; float: right" alt="cmc logo">
        </div>
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
    </div>
    <!-- End: Title Head -->
    <!-- Start: Create New Order -->
    <div class="alert alert-success col-lg-12">
        @using (Html.BeginForm("SetupNewOrder", "Orders", FormMethod.Post))
        {
            <div class="input-group">
                @Html.DropDownList("NewClientID", MvcPhoenix.Services.OrderService.fnListOfClientIDs(), new { name = "NewClientID", @class = "form-control" })
                <span class="input-group-btn"><input type="submit" class="btn btn-success" value="Create New Order" /></span>
            </div>
        }
    </div>
    <!-- End: Create New Order -->

    <!-- Order Import-->
    @Html.Action("OrderImport")
    <!-- Order Import-->

    <!-- Start: Search Order -->
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-search fa-fw"></i>Search</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            @using (Html.BeginForm("LookupOrderID", "Orders", FormMethod.Post))
                            {
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-search fa-fw"></i></span>
                                    <input class="form-control" id="orderid" type="search" placeholder="Enter Order Number" min="3" name="orderid" />
                                    <span class="input-group-btn"><input type="submit" class="btn btn-success" value="Search" /></span>
                                </div>
                            }
                        </div>
                        <div class="col-md-12">
                            <p><a href="#" class="" data-toggle="modal" data-target="#advancedsearch">+ Advanced Search Options</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-search fa-fw"></i><i class="fa fa-filter fa-fw"></i>Quick Search</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 form-group">
                            @Ajax.ActionLink("Today", "OrdersToday", "Orders", null, new AjaxOptions { UpdateTargetId = "dvSearchResults", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary btn-block form-control", title = "Show Orders Created Today" })
                        </div>
                        <div class="col-md-3 form-group">
                            @Ajax.ActionLink("Yesterday", "OrdersYesterday", "Orders", null, new AjaxOptions { UpdateTargetId = "dvSearchResults", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary btn-block form-control", title = "Show Orders Created Yesterday" })
                        </div>
                        <div class="col-md-3 form-group">
                            @Ajax.ActionLink("Last 10 Orders", "OrdersLastTen", "Orders", null, new AjaxOptions { UpdateTargetId = "dvSearchResults", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary btn-block form-control", title = "Show ALL Last 10 Orders" })
                        </div>
                        <div class="col-md-3 form-group">
                            @Ajax.ActionLink("My Orders (10)", "OrdersMineLastTen", "Orders", null, new AjaxOptions { UpdateTargetId = "dvSearchResults", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary btn-block form-control", title = "Show MY Last 10 Orders" })
                        </div>
                        <label class="invisible">.</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- End: Search Order -->

    <!--Start: Display Results-->
    <div class="row">
        <div id="dvSearchResults" class="table-responsive col-md-12">
            @Html.Partial("~/Views/Orders/_IndexPartial.cshtml")
        </div>
    </div>
    <!--End: Display Results-->
    <!--Advanced Search Modal-->
    <div id="advancedsearch" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <p class="pull-right"><i>Esc</i> or &nbsp;<button type="button" class="close" data-dismiss="modal"> x </button></p>
                    <h4 class="modal-title">Advanced Search</h4>
                </div>
                <div class="modal-body">
                    @using (Ajax.BeginForm("LookupClientID", "Orders", FormMethod.Post, new AjaxOptions
                        {
                            UpdateTargetId = "dvSearchResults",
                            InsertionMode = InsertionMode.Replace
                        }))
                    {
                        <div class="input-group" style="padding: 5px;">
                            @Html.DropDownList("DDClientID", MvcPhoenix.Services.OrderService.fnListOfClientIDs(), new { name = "DDClientID", @class = "form-control" })
                            <span class="input-group-btn"><button type="submit" class="btn btn-success" id="myClear">Last 20</button></span>
                        </div>
                    }

                    @using (Ajax.BeginForm("LookupOrderDate", "Orders", FormMethod.Post, new AjaxOptions { UpdateTargetId = "dvSearchResults", InsertionMode = InsertionMode.Replace }))
                    {
                        <div class="input-group" style="padding: 5px;">
                            <input class="form-control" id="searchorderdate" name="searchorderdate" type="date" />
                            <span class="input-group-btn"><button type="submit" class="btn btn-success" id="myClear">Search</button></span>
                        </div>
                    }

                    @using (Ajax.BeginForm("LookupCompany", "Orders", FormMethod.Post, new AjaxOptions { UpdateTargetId = "dvSearchResults", InsertionMode = InsertionMode.Replace }))
                    {
                        <div class="input-group" style="padding: 5px;">
                            <input class="form-control" name="searchcompany" id="searchcompany" placeholder="Ship To..." />
                            <span class="input-group-btn"><button type="submit" class="btn btn-success" id="myClear">Search</button></span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!--./Advanced Search Modal-->
</div>
