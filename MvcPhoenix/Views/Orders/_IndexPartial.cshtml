@model List<MvcPhoenix.Models.OrderMasterFull>

<div class="col-md-12 text-center">
    <label class="lead">@TempData["SearchResultsMessage"]</label>
</div>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Client</th>
                <th>Order Date</th>
                <th>Ship To</th>
                <th>Order ID</th>
                <th>Type</th>
                <th>CreatedBy</th>
                <th>Items</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.clientname</td>
                    <td>@String.Format("{0:dd MMM yyyy}", @item.orderdate)</td>
                    <td>@item.company</td>
                    <td>@item.orderid.ToString()</td>
                    <td>@item.ordertype</td>
                    <td>@item.CreateUser</td>
                    <td>@item.itemscount</td>
                    <td>
                        <span class="pull-right">
                            <a class="btn btn-xs btn-primary" title="Edit Order" href="~/Orders/Edit/@item.orderid"><i class="fa fa-fw fa-pencil"></i></a>
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@*Pagination control*@
@if (Model.Count > 0)
{    
    <div class="row">
        <div class="col-md-12 text-center">
            <label>@ViewBag.Page / @ViewBag.MaxPage</label>
            <div class="row">
                @if (ViewBag.Page > 0)
                {
                    <a href="@Url.Action("Index", new { page = ViewBag.Page - 1 })"
                       class="btn btn-primary btn-sm">
                        &laquo; Prev
                    </a>
                }
                @if (ViewBag.Page < ViewBag.MaxPage)
                {
                    <a href="@Url.Action("Index", new { page = ViewBag.Page + 1 })"
                       class="btn btn-primary btn-sm">
                        Next &raquo;
                    </a>
                }
            </div>
        </div>
    </div>
}