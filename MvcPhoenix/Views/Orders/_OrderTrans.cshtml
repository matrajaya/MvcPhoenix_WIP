@model List<MvcPhoenix.Models.OrderTrans>
@{
    ViewBag.Title = "Order Trans";

    
    
    
 }
<div class="table-responsive">
        <table id="mytable" class="table table-hover table-striped" style="font-size:.85em;margin:auto;">
            <tr>
                <th>id</th>
                <th>Date</th>
                <th>Type</th>
                <th>Item</th>
                <th style="text-align:center;">Qty</th>
                <th style="text-align:right;">Amount</th>
                <th>Comments</th>
                <th class="text-center"><i class="fa fa-fw fa-pencil-square-o"></i></th>
            </tr>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ordertransid.ToString()</td>
                        <td>@item.transdate</td>
                        <td>@item.transtype</td>
                        <td>@item.productcode</td>
                        <td class="text-center">@item.transqty</td>
                        <td class="text-right">@item.transamount</td>
                        <td>@item.comments</td>

                        <td class="text-center">
                            @Ajax.ActionLink("Edit", "EditTrans", "Orders", new { id = @item.ordertransid }, new AjaxOptions
                             {
                                 UpdateTargetId = "dialogPlaceholder",
                                 InsertionMode = InsertionMode.Replace,
                                 HttpMethod = "GET",
                                 OnBegin="$('#dialogPlaceholder').empty()",
                                OnSuccess = "$('#dialogPlaceholderModal').modal('show');"
                             },
                           new { @class = "btn btn-xs btn-primary" })
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>


<div id="testdiv">


</div>

