@{
    ViewBag.Title = "Inventory Management";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <img src="~/Content/images/logos/oltlogo.jpg" style="width: auto; height: 73px; float: right" alt="cmc logo">
        </div>
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 form-group">
            @using (Html.BeginForm("Search", "Inventory"))
            {
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-search fa-fw"></i></span>
                    @Html.TextBox("searchString", null, new { @class = "form-control", @placeholder = "Enter Product Code", @required = "required" })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-primary form-control"><i class="fa fa-search"></i> Search</button>
                    </span>
                </div>
            }
        </div>
    </div>

    <div class="panel panel-primary">
        <div class="panel-body">
            <div id="dvGridPlaceHolder">
                <div class="col-md-12 text-center">
                    <label class="lead">Recently Received Bulk</label>
                </div>
                <div class="table-responsive">
                    @{Html.RenderAction("RecentBulkReceived", "Inventory");}
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-primary">
        <div class="panel-body">
            <div id="dvGridPlaceHolder">
                <div class="col-md-12 text-center">
                    <label class="lead">Pack-Out Production Work Orders</label> <span style="background-color:yellow;">Under Development</span>
                </div>
                <div class="table-responsive">
                    <table id="myTable" class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Status</th>
                                <th>Client</th>
                                <th>Expiry</th>
                                <th>WH</th>
                                <th>Master Code</th>
                                <th>Name</th>
                                <th>QTY</th>
                                <th>UM</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>12345</td>
                                <td>12345</td>
                                <td>12345</td>
                                <td>12345</td>
                                <td>12345</td>
                                <td>12345</td>
                                <td>12345</td>
                                <td>12345</td>
                                <td>12345</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>