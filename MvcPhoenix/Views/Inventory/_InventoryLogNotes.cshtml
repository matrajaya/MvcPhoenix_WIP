@model List<MvcPhoenix.Models.ProductNote>

<div id="dvLogNotes">
    <div class="row">
        <div class="col-md-3 pull-right">
            @Ajax.ActionLink("+ Add New Log", "CreateProductNote", "Products", new { id = @ViewBag.ParentKey }, new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "GET",
                UpdateTargetId = "dialogPlaceholder",
                OnSuccess = "$('#dialogPlaceholderModal').modal('show')"
            }, new { @class = "btn btn-primary btn-block" })
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th width="70%">Notes</th>
                    <th>Reason Code</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@String.Format("{0:dd MMM yyyy}", @item.notedate)</td>
                        <td>@item.notes</td>
                        <td>@item.reasoncode</td>
                        <td><a href="#">Edit</a></td>
                    </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    function UpdateProductNotesList() {
        $("#dvLogNotes").load('@Url.Action("ProductLogList", "Products", new { id = @ViewBag.ParentKey })');
    }
</script>