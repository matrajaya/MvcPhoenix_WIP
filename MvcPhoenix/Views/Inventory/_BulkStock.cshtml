@model MvcPhoenix.Models.Inventory
@using MvcPhoenix.Models
@{}

<div class="row" style="padding-bottom:20px">
    <div class="col-md-3">
        <input type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#editbulkstockmod" value="Adjust Bulk Stock" />
    </div>

    <div class="pull-right col-md-3">
        <input type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#packoutrequestmod" value="Packout Request" />
    </div>
    <div class="clearfix"></div>
</div>

<div id="editbulkstockmod" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                @Html.Partial("~/Views/Inventory/_BulkStockModal.cshtml")
            </div>
        </div>
    </div>
</div>

<div id="packoutrequestmod" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                @Html.Partial("~/Views/Inventory/_PackoutModal.cshtml")
            </div>
        </div>
    </div>
</div>

