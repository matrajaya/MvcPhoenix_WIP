@model List<MvcPhoenix.EF.tblProductDetail>
@{
    Layout = null;
}

<div>
    @{
        if (Model.Count == 0)
        {
            <p>Nothing</p>
        }
        else
        {
            <table class="table">
                <tr>
                    <th>
                        Prodid
                    </th>
                    <th>
                        Prod Code
                    </th>
                    <th>
                        Prod Name
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductDetailID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ProductDetailID })
                        </td>
                    </tr>
                }
            </table>
        }
}
    
</div>