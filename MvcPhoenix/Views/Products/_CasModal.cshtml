@model MvcPhoenix.Models.ProductViewModel
@using MvcPhoenix.Models
@{}

<div class="row">
    <div class="col-md-6 form-group">
        <label>CAS Number</label>
        <input class="form-control">
    </div>
    <div class="col-md-6 form-group">
        <label>Chemical Name</label>
        <input class="form-control">
    </div>
</div>
<div class="row">
    <div class="col-md-3 form-group">
        <label>Less Than</label>
        <input type="checkbox" class="checkbox">
    </div>
    <div class="col-md-3 form-group">
        <label>Percentage</label>
        <input class="form-control">
    </div>
    <div class="col-md-3 form-group">
        <label>Restricted Amt</label>
        <input class="form-control">
    </div>
    <div class="col-md-3 form-group">
        <label>Reportable Amt</label>
        <input class="form-control">
    </div>
</div>

<div class="row">
    <div class="col-md-4 form-group">
        <label>Pack on Receipt</label>
        <input type="checkbox" class="checkbox">
    </div>
    <div class="col-md-4 form-group">
        <label>Reportable Qty</label>
        <input type="checkbox" class="checkbox">
    </div>
    <div class="col-md-4 form-group">
        <label>Exclude From Label</label>
        <input type="checkbox" class="checkbox">
    </div>
</div>
<div class="row">
    <div class="col-md-6 form-group">
        <input class="btn btn-success btn-block" type="button" value="Save" />
    </div>
    <div class="col-md-6 form-group">
        <input class="btn btn-danger btn-block" type="button" data-dismiss="modal" value="Close" />
    </div>
</div>