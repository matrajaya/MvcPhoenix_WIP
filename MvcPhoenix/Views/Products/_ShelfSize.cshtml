                        <td>@item.groundhazard</td>
                        <td>@item.airhazard</td>
                        <td>@item.notes</td>
                        @*<td>
                            @Ajax.ActionLink("Edit", "EditShelfMaster", "Products", new { id = @item.shelfid }, new AjaxOptions
                      {
                       InsertionMode = InsertionMode.Replace,
                       HttpMethod = "GET",
