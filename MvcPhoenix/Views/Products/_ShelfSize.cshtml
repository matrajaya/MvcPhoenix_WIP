@model List<MvcPhoenix.Models.ShelfMasterViewModel>

<div id="dvShelfMasterList">

    <label>Shelf Size Info | </label> @Html.ActionLink("Manage", "Index", "ShelfMaster", new { id = @ViewBag.ParentID }, null)

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Size</th>
                    <th>Part #</th>
                    <th>WH</th>
                    <th>Bin</th>
                    <th>Min Qty</th>
                    <th>Max Qty</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.size</strong></td>
                        <td>@item.packageid</td>
                        <td>@item.warehouse</td>
                        <td>@item.bin</td>
                        <td>@item.reordermin.ToString()</td>
                        <td>@item.reordermax.ToString()</td>
                        <td style="width: 50%;">@item.notes</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>