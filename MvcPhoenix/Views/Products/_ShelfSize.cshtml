
@using MvcPhoenix.Models
@{}


<label>Shelf Size Info | </label>
<label><a href="#" class="" data-toggle="modal" data-target="#addshelfsz">+ Add Shelf Size</a></label>
<div id="addshelfsz" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Shelf Size</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("~/Views/Products/_ShelfSizeModal.cshtml")
            </div>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Size</th>
                <th>Part Number</th>
                <th>Mnemonic</th>
                <th>BusArea</th>
                <th>Warehouse</th>
                <th>Bin</th>
                <th>Min Qty</th>
                <th>Max Qty</th>
                <th>Re-order Qty</th>
                <th>Gnd Haz</th>
                <th>Air Hzd</th>
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListOfShelfItems)
            {
                <tr>
                    <td><a href="#" onclick="alert('TODO')"><i class="fa fa-minus-circle fa-fw" style="color: red"></i></a></td>
                    <td><strong>@item.size</strong></td>
                    <td>@item.packagepartnumber</td>
                    <td>@item.mnemonic</td>
                    <td>@item.busarea</td>
                    <td>@item.warehouse</td>
                    <td>@item.bin</td>
                    <td>@item.reordermin.ToString()</td>
                    <td>@item.reordermax.ToString()</td>
                    @*<td>@item.reorderqty.ToString()</td>*@
                    <td>@{if (item.reorderqty == null) { item.reorderqty = 0; } @item.reorderqty.ToString();}</td>
                    <td>@item.groundhazard</td>
                    <td>@item.airhazard</td>
                    <td>@item.notes</td>
                    @*<td><a href="#" onclick="alert('TODO')">Edit</a></td>*@
                    <td><a href="#" class="" data-toggle="modal" data-target="#addcas">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

