@model List<MvcPhoenix.Models.InvoiceViewModel>
@{
    ViewBag.Title = "Invoice Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <img src="~/Content/images/logos/oltlogo.jpg" style="width: auto; height: 73px; float: right" alt="cmc logo">
        </div>
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-sticky-note fa-fw"></i> Search</h3>
                </div>
                <div class="panel-body">
                    <label>Search Invoice #</label>
                    <div class="input-group">
                        <input class="form-control" />
                        <span class="input-group-btn"><input type="submit" class="btn btn-success" value="Search" /></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-sticky-note fa-fw"></i> Generate Invoice</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3">
                            <label>Client</label>
                            @Html.DropDownList("clientid", (List<SelectListItem>)ViewBag.ListOfClients, new { onchange = "BillingsGroupDropDown(this.value)", @class = "form-control" })
                        </div>
                        <div class="col-md-3">
                            <label>Billing Group</label>
                            <select id="ddlbillgrp" name="ddlbillgrp" class="form-control"></select>
                        </div>
                        <div class="col-md-3">
                            <label>Invoice Period</label>
                            <input id="invoiceperiod" type="month" class="form-control" /> @*returns data as "YYYY-MM"*@
                        </div>
                        <div class="col-md-3">
                            <label class="invisible">Generate</label>
                            <input type="button" class="btn btn-success btn-block form-control" value="Generate" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="panel panel-primary">
        <div class="panel-body">
            <div id="dvGridPlaceHolder" class="row">
                <div class="col-md-12 text-center">
                    <label class="lead">Review Invoices</label>
                </div>
                <div class="table-responsive col-md-12">
                    <table id="myTable" class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Invoice #</th>
                                <th>Client</th>
                                <th>Billing Group</th>
                                <th>Period</th>
                                <th>Status</th>
                                <th><i class="fa fa-fw fa-pencil-square-o"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1000556</td>
                                <td>Allnex</td>
                                <td>Coatings</td>
                                <td>July, 2016</td>
                                <td>Pending Review</td>
                                <td>@Html.ActionLink("Edit", "Edit", new { id = 1000556 })</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-primary">
        <div class="panel-body">
            <div id="dvGridPlaceHolder" class="row">
                <div class="col-md-12 text-center">
                    <label class="lead">Verified Invoices</label>
                </div>
                <div class="table-responsive col-md-12">
                    <table id="myTable" class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Invoice #</th>
                                <th>Client</th>
                                <th>Billing Group</th>
                                <th>Period</th>
                                <th>Status</th>
                                <th>Varified?</th>
                                <th><i class="fa fa-fw fa-pencil-square-o"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1000556</td>
                                <td>Allnex</td>
                                <td>Coatings</td>
                                <td>July, 2016</td>
                                <td>Pending Review</td>
                                <td>Yes</td>
                                <td>@Html.ActionLink("Edit", "Edit", new { id = 1000556 })</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function BillingsGroupDropDown(id) {
        alert("Hello There");
        var clientddlid = id;
    }
</script>