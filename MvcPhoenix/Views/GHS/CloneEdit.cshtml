@model MvcPhoenix.Models.GHSPHSource

<div id="cloneandeditmodal" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Ajax.BeginForm("SaveClone", "GHS", new AjaxOptions
                {
                    HttpMethod = "POST",
                    UpdateTargetId = "dialogResult",
                    OnSuccess = "CloseUpdate",
                    InsertionMode = InsertionMode.Replace
                }))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Clone/Edit P&amp;H Source</h4>
                </div>

                <div class="modal-body">

                    <div class="row">
                        @Html.HiddenFor(m => m.PHSourceID)
                        <div class="col-md-8 form-group">
                            <label>P&amp;H Code</label>
                            @Html.TextBoxFor(m => m.PHNumber, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="col-md-4 form-group">
                            <label>Language</label>
                            @Html.TextBoxFor(m => m.Language, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Statement</label>
                            @Html.TextAreaFor(m => m.PHStatement, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    function CloseUpdate() {
        RefreshDetailPH();
        $("#cloneandeditmodal").modal('hide');
        window.location.reload();
    }
</script>