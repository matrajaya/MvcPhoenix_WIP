@model MvcPhoenix.Models.GHSViewModel
@{
    ViewBag.Title = "GHS Information";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <img src="~/Content/images/logos/@ViewBag.logofilename" style="width: auto; height: 73px; float: right" alt="@ViewBag.clientname logo">
        </div>
        <div class="col-lg-12">
            <h1 class="page-header">
                @ViewBag.Title <small>@ViewBag.productcode - @ViewBag.productname</small>
            </h1>
        </div>
    </div>
    <!-- /.Page Heading -->

    <div class="form-group row">
        <div class="col-md-12">
            <i class="fa fa-arrow-circle-left"></i> @Html.ActionLink("Back to Product Edit", "Edit", "Products", new { id = @ViewBag.ParentID }, null)
        </div>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-suitcase fa-fw"></i> Global Harmonized System</h3>
        </div>
        <div class="panel-body">
            <div class="row form-group">
                <div class="col-md-2">
                    <label>GHS Signal Word</label>
                    @Html.DropDownListFor(m => m.GHSSignalWord, new SelectList(Enum.GetValues(typeof(MvcPhoenix.Models.GHSViewModel.GhsSignalWordChoice))), new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    <label>GHS Symbol 1</label>
                    @Html.DropDownListFor(m => m.GHSSymbol1, new SelectList(Enum.GetValues(typeof(MvcPhoenix.Models.GHSViewModel.GhsSymbolChoice))), new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    <label>GHS Symbol 2</label>
                    @Html.DropDownListFor(m => m.GHSSymbol2, new SelectList(Enum.GetValues(typeof(MvcPhoenix.Models.GHSViewModel.GhsSymbolChoice))), new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    <label>GHS Symbol 3</label>
                    @Html.DropDownListFor(m => m.GHSSymbol3, new SelectList(Enum.GetValues(typeof(MvcPhoenix.Models.GHSViewModel.GhsSymbolChoice))), new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    <label>GHS Symbol 4</label>
                    @Html.DropDownListFor(m => m.GHSSymbol4, new SelectList(Enum.GetValues(typeof(MvcPhoenix.Models.GHSViewModel.GhsSymbolChoice))), new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    <label>GHS Symbol 5</label>
                    @Html.DropDownListFor(m => m.GHSSymbol5, new SelectList(Enum.GetValues(typeof(MvcPhoenix.Models.GHSViewModel.GhsSymbolChoice))), new { @class = "form-control" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-12">
                    <label>Other Label Information</label>
                    @Html.TextAreaFor(m => m.OtherLabelInfo, new { @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 pull-right">
                    <input type="submit" class="btn btn-primary btn-block" value="Save"/>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-3">
                    <label>P & H Statements</label>
                    @using (Ajax.BeginForm("Search", "GHS", new AjaxOptions
                            {
                                UpdateTargetId = "dvSearchPHCodes",
                                InsertionMode = InsertionMode.Replace,
                                HttpMethod = "POST",
                                LoadingElementId = "dvspinner"
                            }))
                    {
                        <div class="form-group">
                            @Html.TextBox("searchString", null, new { @class = "form-control", @placeholder = "Search for statements", @required = "required" })
                        </div>
                        <button type="submit" class="btn btn-info btn-block"><i class="fa fa-search"></i> Search</button>
                    }
                </div>
                <div class="table-responsive col-md-9">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th></th>
                                <th>Label Exclude</th>
                                <th>P & H Code</th>
                                <th>Language</th>
                                <th>Statement</th>
                            </tr>
                            <tr>
                                <td><i class="fa fa-minus-circle fa-fw" style="color: red"></i></td>
                                <td><input type="checkbox"></td>
                                <td>H226</td>
                                <td>EN</td>
                                <td>IF ON SKIN (or hair): Remove/take off immediately all contaminated clothing. Rinse skin with water/shower.</td>
                            </tr>
                            <tr>
                                <td><i class="fa fa-minus-circle fa-fw" style="color: red"></i></td>
                                <td><input type="checkbox"></td>
                                <td>H302</td>
                                <td>EN</td>
                                <td>Harmful if swallowed</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

    <div id="dvSearchPHCodes"></div>

    <div class="col-md-12 text-center" id="dvspinner" style="display:none; font-size:large">
        <i class="fa fa-circle-o-notch fa-5x fa-spin"></i> Processing...
    </div>
</div>
