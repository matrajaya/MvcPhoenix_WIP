@model List<MvcPhoenix.Models.BulkContainerViewModel>

<div class="panel panel-primary">
    <div class="panel-body">
        @if (@Model.Count < 1)
        {
            <label class="lead">No Bulk Products Found.</label>
        }

        @if (@Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Client</th>
                            <th>Warehouse</th>
                            <th>Bin</th>
                            <th>Status</th>
                            <th>Master Code</th>
                            <th>Master Name</th>
                            <th><i class="fa fa-fw fa-pencil-square-o"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in @Model)
                        {
                            <tr>
                                <td>@item.bulkid</td>
                                <td>@item.clientname</td>
                                <td>@item.warehouse</td>
                                <td>@item.bin</td>
                                <td>@item.bulkstatus</td>
                                <td>@item.MasterCode</td>
                                <td>@item.MasterName</td>
                                <td>@Html.ActionLink("Edit", "Edit", new { id = @item.bulkid })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>