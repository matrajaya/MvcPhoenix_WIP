                            </div>
                        </div>
                        <div class="row text-center" style="padding-top:4px;">
                            <div class="col-md-12">
                                <input id="btnsubmit" type="submit" value="Search" class="btn btn-success btn-sm" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-file-text-o fa-fw"></i> Search Other</h3>
                </div>
                <div class="panel-body">

                    @using (Ajax.BeginForm("Search2", "Bulk", new AjaxOptions
                        {
                            UpdateTargetId = "dvSearchResults",
                            InsertionMode = InsertionMode.Replace,
                            HttpMethod = "POST",
                            LoadingElementId = "dvspinner"
                        }))
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <label>Bulk Status</label>
                                @Html.DropDownList("BulkStatus", (List<SelectListItem>)ViewBag.ListOfBulkStatus, new { @class = "form-control", @style = "width:35%;" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>Warehouse</label>
                                @Html.DropDownList("Warehouse", (List<SelectListItem>)ViewBag.ListOfWarehouses, new { @class = "form-control", @style = "width:35%;" })
                            </div>
                        </div>
                        <div class="row text-center" style="padding-top:4px;">
                            <div class="col-md-12">
                                <input id="btnsubmit" type="submit" value="Search" class="btn btn-success btn-sm" />
                            </div>
                        </div>


                    }
                </div>
            </div>
        </div>


    </div>

    <div class="col-md-12 text-center" id="dvspinner" style="display:none;">
        <i class="fa fa-circle-o-notch fa-2x fa-spin"></i> Processing...
    </div>

    <div id="dvSearchResults">

    </div>

</div>

