                    <h3 class="panel-title"><i class="fa fa-file-text-o fa-fw"></i> Search Client/MasterCode</h3>
                </div>
                <div class="panel-body">

                    @using (Ajax.BeginForm("Search1", "Bulk", new AjaxOptions
                    {
                        UpdateTargetId = "dvSearchResults",
                        InsertionMode = InsertionMode.Replace,
                        HttpMethod = "POST",
                    }))
                    {

                        <div class="row">
                            <div class="col-md-12">
                                <label>Client</label>
                                @Html.DropDownList("ClientID", (List<SelectListItem>)ViewBag.ListOfClients, new { onchange = "OnChangeClientID()", @class = "form-control", @style = "width:50%;" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>Mastercode</label>
                                <select name='productmasterid' id='productmasterid' class='form-control' style='width:90%;'>
