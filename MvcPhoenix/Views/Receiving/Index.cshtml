@model List<MvcPhoenix.Models.BulkContainerViewModel>
@{
    ViewBag.Title = "Receiving";
}
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <img src="~/Content/images/logos/oltlogo.jpg" style="width: auto; height: 73px; float: right" alt="acme logo">
        </div>
        <div class="col-lg-12">
            <h3 class="page-header">@ViewBag.Title</h3>
        </div>
    </div>
</div>
<div class="row">

    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-file-text-o fa-fw"></i>Receive Client Stock</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="form-group col-md-12">
                        <a href='@Url.Action("SetUpReceiveKnown", "Receiving")' class="form-control btn btn-warning btn-block">Receive Bulk Stock</a>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <a href='@Url.Action("SetUpReceivePrePack", "Receiving")' class="form-control btn btn-success btn-block">Receive Prepacked Stock</a>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <a href='@Url.Action("SetupReceiveUnKnown", "Receiving")' class="form-control btn btn-danger btn-block">Receive Unknown Bulk Stock</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="table-responsive col-md-12" style="font-size:.8em;">
        <table id="myTable" class="table table-hover table-striped">
            <thead>
                <tr><td colspan="13" style="text-align:center;"><strong>Bulk Containers Currently in Receiving</strong></td></tr>
                <tr>
                    <th>Rec'd</th>
                    <th>ID</th>
                    <th>Status</th>
                    <th>Client</th>
                    <th>Warehouse</th>
                    <th>Carrier</th>
                    <th>Master Code</th>
                    <th>Name</th>
                    <th>Lot</th>
                    <th>UM</th>
                    <th>WT</th>
                    <th><i class="fa fa-fw fa-pencil-square-o"></i></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@String.Format("{0:dd MMM yyyy HH:mm:ss }", @item.receivedate)</td>
                        <td>@item.bulkid.ToString()</td>
                        <td>@item.bulkstatus</td>
                        <td>@item.clientname</td>
                        <td>@item.warehouse</td>
                        <td>@item.carrier</td>
                        <td>@item.MasterCode</td>
                        <td>@item.MasterName</td>
                        <td>@item.lotnumber</td>
                        <td>@item.um</td>
                        <td>@item.receiveweight.ToString()</td>
                        <td>@Html.ActionLink("Edit", "EditContainerReceipt", new { id = @item.bulkid })</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>



</div>

