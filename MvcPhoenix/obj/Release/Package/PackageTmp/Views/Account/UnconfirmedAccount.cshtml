@{
    ViewBag.Title = "Check Email";
    Layout = "~/Views/Shared/_LayoutNaked.cshtml";
}

<div class="container">
    <div class="col-md-6 col-md-offset-3">
        <div class="row">
            <h2>@ViewBag.Title.</h2>
            <hr />
        </div>
        <div class="row">
            <p class="lead">
                Your account is yet to be confirmed.
            </p>
            <p class="lead">
                If you have not received an email 10 minutes after registration then please click the button.
            </p>

            @using (Html.BeginForm("RegenerateEmailConfirmation", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.Hidden("Email", (string)ViewBag.Email)
                <input type="submit" value="Re-Send Email Confirmation" class="btn btn-primary" />
            }
        </div>
    </div>
</div>


