@{
	ViewBag.Title = "Check Email";
	Layout = "~/Views/Shared/_LayoutNaked.cshtml";
}

<div class="container">
	<div class="col-md-6 col-md-offset-3">
		<div class="row">
			<h2>@ViewBag.Title.</h2>
			<hr />
		</div>

		<div class="row">
			<p class="lead">An email with a link is on it's way to the address you provided.</p>
			<p>Redirecting in 5 seconds...</p>
		</div>
	</div>
</div>

<script>
	setTimeout(function () {
		window.location = '/Account/Login';
	}, 5000);
</script>