@model MvcPhoenix.Models.CMCUser
@{
    Layout = "~/Views/Shared/_LayoutNaked.cshtml";
    ViewBag.Title = "Log in";
}

<div class="container">
    <div class="col-md-4 col-md-offset-4">
        <h2>@ViewBag.Title.</h2>
        <hr />
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Username: </label>
                <input class="form-control" id="Username" name="UserName" type="text" placeholder="johnsmith" />
            </div>
            <div class="form-group">
                <label>Password: </label>
                <input class="form-control" id="Password" name="Password" type="password" placeholder="0000" />
            </div>
            <div style="float: right">
                <input type="submit" class="btn btn-primary" id="ButtonLogin" value="Login" />
            </div>
        }
    </div>
</div>
