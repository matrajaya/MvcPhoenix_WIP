<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Phoenix/CMC SiMPLE</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <div id="wrapper">
        <!--Begin: Top-banner and Navigation-->
        @*<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">*@
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Phoenix/SiMPLE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            @Html.Partial("_LoginPartial")

            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                @if (Session["MyMenu"] == null)
                {
                    Session["MyMenu"] = Html.Partial("~/Views/Shared/_Menu.cshtml");
                }
                @Session["MyMenu"]
            </div>
            <!-- End Sidebar Menu Items -->
        </nav>
        <!--End: Top-banner and Navigation-->
        <!-- Begin: Generate View Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="container body-content" style="padding-top: 20px;">
                    @RenderBody()
                    <div id="dialogPlaceholder"></div>
                    <hr />
                    <div class="row">
                        <footer class="col-lg-12">
                            <p><b>&copy; @DateTime.Now.Year - SiMPLE by CMC,</b> <em>a subsidiary of Odyssey.</em></p>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
        <!-- End: Generate View Content -->
    </div>

    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

</body>
</html>
