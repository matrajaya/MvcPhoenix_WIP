@model List<MvcPhoenix.Models.BulkContainerViewModel>
@{
    ViewBag.Title = "Receiving";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
                <img src="~/Content/images/logos/oltlogo.jpg" style="width: auto; height: 73px; float: right" alt="cmc logo">
            </div>
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-file-text-o fa-fw"></i>Receive Client Stock</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group  col-md-4">
                            <a href='@Url.Action("SetUpReceiveKnown", "Receiving")' class="form-control btn btn-warning btn-block">Receive Bulk Stock</a>
                        </div>
                        <div class="form-group col-md-4">
                            <a href='@Url.Action("SetUpReceivePrePack", "Receiving")' class="form-control btn btn-success btn-block">Receive Prepacked Stock</a>
                        </div>
                        <div class="form-group col-md-4">
                            <a href='@Url.Action("SetupReceiveUnKnown", "Receiving")' class="form-control btn btn-danger btn-block">Receive Unknown Bulk Stock</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="col-md-12 text-center" id="dvspinner" style="display:none; font-size:large">
    <i class="fa fa-circle-o-notch fa-5x fa-spin"></i> Processing...
</div>

<div id="dvGridPlaceHolder" class="row">
    <div class="table-responsive col-md-12">
        <table id="myTable" class="table table-hover table-striped">
            <thead>
                <tr>
                    <th colspan="13" style="text-align:center;">Bulk Containers Currently in Receiving</th>
                </tr>
                <tr>
                    <th>ID</th>
                    <th>Status</th>
                    <th>Client</th>
                    <th>Rec'd</th>
                    <th>Expiry</th>
                    <th>Warehouse</th>
                    <th>Carrier</th>
                    <th>Master Code</th>
                    <th>Name</th>
                    <th>Lot</th>
                    <th>UM</th>
                    <th>WT</th>
                    <th><i class="fa fa-fw fa-pencil-square-o"></i></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.bulkid.ToString()</td>
                        <td>@item.bulkstatus</td>
                        <td>@item.clientname</td>
                        <td>@String.Format("{0:dd MMM yyyy}", @item.receivedate)</td>
                        <td>@String.Format("{0:dd MMM yyyy}", @item.expirationdate)</td>
                        <td>@item.warehouse</td>
                        <td>@item.carrier</td>
                        <td>@item.MasterCode</td>
                        <td>@item.MasterName</td>
                        <td>@item.lotnumber</td>
                        <td>@item.um</td>
                        <td>@item.receiveweight.ToString()</td>
                        <td>@Html.ActionLink("Edit", "EditContainerReceipt", new { id = @item.bulkid })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>