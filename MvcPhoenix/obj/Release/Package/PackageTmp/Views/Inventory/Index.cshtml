@{
    ViewBag.Title = "Inventory";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <img src="~/Content/images/logos/oltlogo.jpg" style="width: auto; height: 73px; float: right" alt="acme logo">
        </div>
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
    </div>

    <form role="form">
        <div class="row">
            <div class="form-group col-md-12">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-search fa-fw"></i></span>
                    <input type="search" class="form-control" placeholder="Enter Product Code...">
                    <span class="input-group-btn"><input type="submit" class="btn btn-success" value="Search" /></span>
                </div>
                <hr />
            </div>
            <div class="form-group col-md-12">
                
            </div>
        </div>
        <div class="form-group row" hidden="hidden">
            <div class="col-md-6">
                <button class="btn btn-success btn-block">Save Changes</button>
            </div>
            <div class="col-md-6">
                <button class="btn btn-danger btn-block">USE THIS BUTTON</button>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-lg-12">
                <span><i class="fa fa-arrow-circle-up"></i> <a href="#top">Back to Top</a></span>
                <span class="pull-right"><a href="#top">Back to Top</a> <i class="fa fa-arrow-circle-up"></i></span>
            </div>
        </div>
    </form>
</div>
