@model MvcPhoenix.Models.Inventory
@using MvcPhoenix.Models
@{}

<div class="row" style="padding-bottom:20px;">
    <div class="col-md-3">
        <input type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#lognotemodal" value="Enter Log Note" />
    </div>
    <div class="clearfix"></div>
</div>

<div id="lognotemodal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                @Html.Partial("~/Views/Inventory/_LogNotesModal.cshtml")
            </div>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <tr>
            <th>Date</th>
            <th>Lot Number</th>
            <th>Subject</th>
            <th>Note</th>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </table>
</div>
