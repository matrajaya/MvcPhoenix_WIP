@model MvcPhoenix.Models.Inventory
@using MvcPhoenix.Models
@{}

<div class="row">
    <div class="col-md-12 text-center">
        <h3 class="modal-title">Edit Bulk Stock Details</h3>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-6 form-group">
        <label>Date Received</label>
        <input type="date" class="form-control" />
    </div>
    <div class="col-md-6 form-group">
        <label>Lot Number</label>
        <input class="form-control" />
    </div>
</div>
<div class="row">
    <div class="col-md-6 form-group">
        <label>Bulk Location</label>
        <input class="form-control" />
    </div>
    <div class="col-md-6 form-group">
        <label>CMC Location</label>
        <input class="form-control" />
    </div>
</div>
<div class="row">
    <div class="col-md-6 form-group">
        <label>Container</label>
        <input class="form-control" />
    </div>
    <div class="col-md-6 form-group">
        <label>Contents Weight</label>
        <input class="form-control" />
    </div>
</div>
<div class="row">
    <div class="col-md-6 form-group">
        <label>Expires On</label>
        <input class="form-control" type="date" />
    </div>
    <div class="col-md-6 form-group">
        <label>Cease Ship Date</label>
        <input class="form-control" type="date" />
    </div>
</div>
<div class="row">
    <div class="col-md-6 form-group">
        <label>Status</label>
        <input class="form-control" />
    </div>
    <div class="col-md-6 form-group">
        <label>QC Date</label>
        <input type="date" class="form-control" />
    </div>
</div>
<div class="row">
    <div class="col-md-6 form-group">
        <label>Notice Date</label>
        <input type="date" class="form-control" />
    </div>
    <div class="col-md-6 form-group">
        <label>Manufacture Date</label>
        <input type="date" class="form-control" />
    </div>
</div>
<div class="row">
    <div class="col-md-6 form-group">
        <label>Waste Accum Start Date</label>
        <input type="date" class="form-control" />
    </div>
    <div class="clearfix"></div>
</div>
<div class="row">
    <div class="col-md-12 form-group">
        <label>Bulk Label Note</label>
        <textarea class="form-control" rows="2"></textarea>
    </div>
</div>
<div class="row">
    <div class="col-md-6 form-group">
        <input class="btn btn-success btn-block" type="button" value="Save" />
    </div>
    <div class="col-md-6 form-group">
        <input class="btn btn-danger btn-block" data-dismiss="modal" type="button" value="Close" />
    </div>
</div>