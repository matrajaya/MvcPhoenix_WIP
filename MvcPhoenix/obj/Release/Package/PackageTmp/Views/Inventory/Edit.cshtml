@{
    ViewBag.Title = "Edit Inventory";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <img src="~/Content/images/logos/oltlogo.jpg" style="width: auto; height: 73px; float: right" alt="cmc logo">
        </div>
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title: 00033062</h1>
        </div>
    </div>

    <form role="form">

        <div class="form-group">
            <div class="col-lg-12 row">
                <i class="fa fa-arrow-circle-left"></i> @Html.ActionLink("Back to Inventory Main", "Index")
            </div>
        </div>
        
        <div class="well col-lg-12">
            <div class="row">
                <div class="col-md-3"><b>Product ID:</b><div>00033062</div></div>
                <div class="col-md-3"><b>Created On:</b><div>10/19/2010</div></div>
                <div class="col-md-3"><b>Last Update On:</b><div>8/3/2015</div></div>
                <div class="col-md-3"><b>Last Update By:</b><div>John Smith</div></div>
            </div>
        </div>

        <!--Start: General Product Information Section-->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title" data-toggle="collapse" data-target="#generalinfopan"><i class="fa fa-file-text-o fa-fw"></i>General Product Information</h3>
            </div>
            <div id="generalinfopan" class="panel-body collapse in">
                <div class="row">
                    <div class="col-md-3 form-group">
                        <label>Client</label>
                        <input class="form-control" value="Ashland" disabled="disabled" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label>Client Code</label>
                        <input class="form-control" value="135462" disabled="disabled" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label>Division</label>
                        <input class="form-control" value="Plastic" disabled="disabled" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label>Supplier ID</label>
                        <input class="form-control" value="BIOCIDE" disabled="disabled" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 form-group">
                        <label>Product Code</label>
                        <input class="form-control" value="00033062" disabled="disabled" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label>Master Code</label>
                        <input class="form-control" value="00033062" disabled="disabled" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Product Name</label>
                        <input class="form-control" value="150 AntiMicrobial" disabled="disabled" />
                    </div>
                </div>
                <div class="row">
                    <div class=" form-group col-md-3">
                        <label>Product Equivalents</label>
                        <div>
                            <ul class="list-group">
                                <li class="list-group-item"><a href="~/Inventory/edit" target="_blank">123546</a></li>
                                <li class="list-group-item"><a href="~/Inventory/edit" target="_blank">12354675</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label>Specific Gravity</label>
                        <input class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label>Density</label>
                        <input class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <div class="alert alert-danger">
                            <label>Discontinued</label>
                            <input type="checkbox" class="checkbox" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">Storage Expiry</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>Shelf Life</label>
                                        <input class="form-control" value="12" />
                                    </div>
                                    <div class="col-md-3">
                                        <label>Cease Ship Days</label>
                                        <input class="form-control" value="0" />
                                    </div>
                                    <div class="col-md-3">
                                        <label>Restricted Qty</label>
                                        <input class="form-control" />
                                    </div>
                                    <div class="col-md-3">
                                        <label>Pack on Receipt</label>
                                        <input type="checkbox" class="checkbox" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">Storage Location</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>Flammable</label>
                                        <input type="checkbox" class="checkbox" />
                                    </div>
                                    <div class="col-md-3">
                                        <label>Freezer</label>
                                        <input type="checkbox" class="checkbox" />
                                    </div>
                                    <div class="col-md-3">
                                        <label>Refrigerated</label>
                                        <input type="checkbox" class="checkbox" />
                                    </div>
                                    <div class="col-md-3">
                                        <label>Other</label>
                                        <input class="form-control" value="Toxic Storage" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--End: General Product Information Section-->
        <!--Start: Inventory Status Section-->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title" data-toggle="collapse" data-target="#"><i class="fa fa-file-text-o fa-fw"></i> Inventory Status</h3>
            </div>
            <div id="" class="panel-body collapse in">
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">Reorder Information</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>Back Order Pending</label>
                                        <input type="checkbox" class="checkbox" />
                                    </div>
                                    <div class="col-md-3">
                                        <label>Prepacked Bulk</label>
                                        <input type="checkbox" class="checkbox" />
                                    </div>
                                    <div class="col-md-6">
                                        <div class="alert alert-warning">
                                            <label>Don't Reorder</label>
                                            <input type="checkbox" class="checkbox" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Reorder Adjustment Days</label>
                                        <input class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label>Currently On Order</label>
                                        <input class="form-control" />
                                    </div>
                                </div>
                                <div class="col-xs-12" style="height:10px;"></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">Inventory Status Levels</h3>
                            </div>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <div class="table table-hover table-striped">
                                        <table class=" table-hover" align="center">
                                            <tr>
                                                <th></th>
                                                <th>Total</th>
                                                <th>Available</th>
                                                <th>Test</th>
                                                <th>Hold</th>
                                                <th>QC</th>
                                                <th>Return</th>
                                                <th></th>
                                            </tr>
                                            <tr>
                                                <th>Shelf Stock Total</th>
                                                <td class="text-center">1.00</td>
                                                <td class="text-center">0.00</td>
                                                <td class="text-center">0.00</td>
                                                <td class="text-center">0.00</td>
                                                <td class="text-center">1.00</td>
                                                <td class="text-center">0.00</td>
                                                <td>lbs</td>
                                            </tr>
                                            <tr>
                                                <th>Bulk Lot Total</th>
                                                <td class="text-center">53.60</td>
                                                <td class="text-center">0.00</td>
                                                <td class="text-center">0.00</td>
                                                <td class="text-center">0.00</td>
                                                <td class="text-center">53.60</td>
                                                <td class="text-center">0.00</td>
                                                <td>lbs</td>
                                            </tr>
                                            <tr style="border-top:double">
                                                <th>Current Inventory Total</th>
                                                <td class="text-center">54.60</td>
                                                <td class="text-center">0.00</td>
                                                <td class="text-center">0.00</td>
                                                <td class="text-center">0.00</td>
                                                <td class="text-center">54.60</td>
                                                <td class="text-center">0.00</td>
                                                <td>lbs</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!--End: Inventory Status Section-->
        <!--Start: Replenishment Orders Section-->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title" data-toggle="collapse" data-target="#replenishorderpan"><i class="fa fa-file-text-o fa-fw"></i> Replenishment Orders</h3>
            </div>
            <div id="replenishorderpan" class="panel-body collapse in">
                <div id="">
                    @Html.Partial("~/Views/Inventory/_ReplenishOrders.cshtml")
                </div>
            </div>
        </div>
        <!--End: Replenishment Orders Section-->
        <!--Start: Bulk Stock Section-->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title" data-toggle="collapse" data-target="#bulkstockpan"><i class="fa fa-file-text-o fa-fw"></i> Bulk Stock</h3>
            </div>
            <div id="bulkstockpan" class="panel-body collapse in">
                <div id="">
                    @Html.Partial("~/Views/Inventory/_BulkStock.cshtml")
                </div>
            </div>
        </div>
        <!--End: Bulk Stock Section-->
        <!--Start: Shelf Stock Section-->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title" data-toggle="collapse" data-target="#shelfstockpan"><i class="fa fa-file-text-o fa-fw"></i> Shelf Stock</h3>
            </div>
            <div id="shelfstockpan" class="panel-body collapse in">
                <div id="">
                    @Html.Partial("~/Views/Inventory/_ShelfStock.cshtml")
                </div>
            </div>
        </div>
        <!--End: Shelf Stock Section-->
        <!--Start: Inventory Note Section-->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title" data-toggle="collapse" data-target="#inventorynotepan"><i class="fa fa-file-text-o fa-fw"></i> Inventory Note</h3>
            </div>
            <div id="inventorynotepan" class="panel-body collapse in">
                <div class="row">
                    <div class="col-md-12">
                        <textarea rows="4" class="form-control"></textarea>
                    </div>
                    <hr />
                    <div class="col-md-12 form-inline">
                        <input type="checkbox" class="checkbox" />
                        <label>Include this note upon receipt of product</label>
                    </div>
                </div>
            </div>
        </div>
        <!--End: Inventory Note Section-->
        <!--Start: Log Notes Section-->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title" data-toggle="collapse" data-target="#lognotespan"><i class="fa fa-file-text-o fa-fw"></i> Log Notes</h3>
            </div>
            <div id="lognotespan" class="panel-body collapse in">
                <div id="">
                    @Html.Partial("~/Views/Inventory/_LogNotes.cshtml")
                </div>
            </div>
        </div>
        <!--End: Log Notes Section-->

        <div class="form-group row">
            <div class=" col-md-6">
                <input type="submit" value="Save Order" class="btn btn-success btn-block" />
            </div>
            <div class=" col-md-6">
                <input type="submit" value="Do Nothin" class="btn btn-danger btn-block" />
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-lg-12">
                <i class="fa fa-arrow-circle-up"></i> <a href="#top">Back to Top</a>
                <span class="pull-right"><a href="#top">Back to Top</a> <i class="fa fa-arrow-circle-up"></i></span>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(function () {
            $("form input").tooltipValidation({
                placement: "top"
            });
            $("form select").tooltipValidation({
                placement: "top"
            });
        });
    </script>

    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker();
        });
    </script>
}